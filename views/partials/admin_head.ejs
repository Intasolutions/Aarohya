<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= typeof pageTitle !== 'undefined' ? pageTitle : 'Admin' %></title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/public/css/adminstyle.css">
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <div class="sidebar-header d-flex justify-content-between align-items-center">
      <span><i class="fa-solid fa-gem"></i> Aarohya Admin</span>
      <!-- Close button for mobile -->
      <span class="sidebar-close d-lg-none" id="sidebar-close">
        <i class="fa-solid fa-xmark"></i>
      </span>
    </div>

    <a href="/admin/dashboard"><i class="fa-solid fa-gauge"></i> Dashboard</a>

    <div class="sidebar-heading">Interface</div>

    <!-- Categories Dropdown -->
    <a data-bs-toggle="collapse" href="#categoriesMenu" role="button" aria-expanded="false">
      <i class="fa-solid fa-folder"></i> Categories <i class="fa-solid fa-angle-down ms-auto"></i>
    </a>
    <div class="collapse" id="categoriesMenu">
      <div class="dropdown-box">
        <small>Category Management:</small>
        <a href="/admin/categories/add">Add</a>
        <!-- <a href="/admin/categories/edit">Edit</a> -->
        <a href="/admin/categories">Manage</a>
      </div>
    </div>

    <!-- Subcategories Dropdown -->
    <a data-bs-toggle="collapse" href="#subcategoriesMenu" role="button" aria-expanded="false">
      <i class="fa-solid fa-folder-open"></i> Subcategories <i class="fa-solid fa-angle-down ms-auto"></i>
    </a>
    <div class="collapse" id="subcategoriesMenu">
      <div class="dropdown-box">
        <small>Subcategory Management:</small>
        <a href="/admin/subcategories/add">Add</a>
        <!-- <a href="/admin/subcategories/edit">Edit</a> -->
        <a href="/admin/subcategories">Manage</a>
      </div>
    </div>

    <!-- Products Dropdown -->
    <a data-bs-toggle="collapse" href="#productsMenu" role="button" aria-expanded="false">
      <i class="fa-solid fa-box"></i> Products <i class="fa-solid fa-angle-down ms-auto"></i>
    </a>
    <div class="collapse" id="productsMenu">
      <div class="dropdown-box">
        <small>Product Management:</small>
        <a href="/admin/products/add">Add</a>
        <!-- <a href="/admin/products/edit">Edit</a> -->
        <a href="/admin/products/">Manage</a>
      </div>
    </div>

    <div class="sidebar-heading">Addons</div>
    <a href="#"><i class="fa-solid fa-chart-line"></i> Charts</a>
    <a href="#"><i class="fa-solid fa-table"></i> Tables</a>
  </div>

  <!-- Sidebar overlay (mobile only) -->
  <div class="sidebar-overlay" id="sidebar-overlay"></div>

  <!-- Main content -->
  <div class="content">
    <div class="topbar">
      <!-- Sidebar toggle button (hamburger) -->
      <span class="menu-toggle d-lg-none" id="menu-toggle">
        <i class="fa-solid fa-bars"></i>
      </span>

      <!-- Search -->
      <form class="d-flex search-bar">
        <input class="form-control me-2" type="search" placeholder="Search..." aria-label="Search">
        <button class="btn btn-dark" type="submit"><i class="fa-solid fa-search"></i></button>
      </form>

      <!-- User -->
      <span style="color:var(--dark); font-weight:bold;">
        <i class="fa-solid fa-user-circle"></i> Admin
      </span>
    </div>

    <main class="mt-3 px-3">
 

  <!-- Scripts -->
  