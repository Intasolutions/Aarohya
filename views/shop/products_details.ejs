<%- include('../partials/header') %>

<section class="product-page container">
  
  <!-- Left: Product Images -->
  <div class="product-gallery">
    <img src="/public/images/hero/her-1.png" class="main-image" id="mainImage" alt="Product">
    <div class="thumbnails">
      <img src="/public/images/hero/hero-2.png" alt="thumb">
      <img src="/public/images/hero/TEST.jpg" alt="thumb">
      <img src="/public/images/hero/test1.jpg" alt="thumb">
    </div>
  </div>

  <!-- Right: Product Info -->
  <div class="product-info">
    <h1>Elegant Gold Bangle</h1>
    <div class="rating">
      ⭐⭐⭐⭐☆ <span>(124 Reviews)</span>
    </div>
    <p class="price">₹12,499 <span class="old-price">₹15,999</span> <span class="offer">20% Off</span></p>
    <p class="stock">In Stock ✔️</p>

    <!-- Quantity -->
    <div class="quantity">
      <button id="decreaseBtn">-</button>
      <input type="number" value="1" min="1" id="qty">
      <button id="increaseBtn">+</button>
    </div>

    <!-- Buttons -->
    <div class="actions">
      <button class="btn buy-now">Buy Now</button>
      <button class="btn add-cart"><i class="fa fa-cart-plus"></i> Add to Cart</button>
    </div>

    <!-- Tabs -->
    <div class="tabs">
      <button class="tab active" data-target="desc">Description</button>
      <button class="tab" data-target="details">Details</button>
      <button class="tab" data-target="reviews">Reviews</button>
    </div>
    <div class="tab-content" id="desc">This is a premium handcrafted bangle with elegant design.</div>
    <div class="tab-content hidden" id="details">Material: 22K Gold | Weight: 15g</div>
    <div class="tab-content hidden" id="reviews">⭐ 4.5/5 - 124 Reviews</div>
  </div>
</section>

<!-- Related Products -->
<section class="related container">
  <h2>Related Products</h2>
  <div class="related-grid">
    <div class="related-card">Ring</div>
    <div class="related-card">Necklace</div>
    <div class="related-card">Earrings</div>
    <div class="related-card">Bracelet</div>
  </div>
</section>

<%- include('../partials/footer') %>
