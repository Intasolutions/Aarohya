<%- include('../partials/header') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>




  .profilePage__container {
    max-width: 700px;
    margin: 60px auto;
    background: white;
    border-radius: 12px;
    box-shadow: 0 6px 18px var(--shadow);
    overflow: hidden;
    padding: 0;
    position: relative;
  }

  .profilePage__header {
    background: var(--primary);
    color: white;
    padding: 50px 20px;
    text-align: center;
    position: relative;
  }

  .profilePage__header img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 5px solid var(--light);
    background: var(--light);
    object-fit: cover;
    margin-top: -60px;
    box-shadow: 0 4px 12px var(--shadow);
    transition: transform var(--transition);
  }

  .profilePage__header img:hover {
    transform: scale(1.05);
  }

  .profilePage__header h2 {
    font-size: 2.2rem;
    margin: 12px 0 4px;
    font-weight: 700;
  }

  .profilePage__header p {
    font-size: 1rem;
    opacity: 0.9;
  }

  .profilePage__form {
    padding: 40px 30px;
    display: flex;
    flex-direction: column;
    gap: 28px;
  }

  .profilePage__form-group {
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .profilePage__form-group label {
    font-weight: 500;
    font-size: 0.95rem;
    color: var(--dark);
    margin-bottom: 8px;
  }

  .profilePage__form-group input {
    border: none;
    border-bottom: 2px solid var(--border);
    font-size: 1.1rem;
    padding: 10px 8px;
    background: transparent;
    transition: border-color var(--transition);
  }

  .profilePage__form-group input:focus {
    border-color: var(--primary);
    outline: none;
  }

  .profilePage__save-button {
    background: var(--primary);
    color: white;
    font-weight: bold;
    padding: 16px 24px;
    border: none;
    border-radius: 10px;
    font-size: 1.2rem;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    box-shadow: 0 4px 12px var(--shadow);
    width: 100%;
  }

  .profilePage__save-button:hover {
    background: var(--hover-primary);
    transform: translateY(-2px);
    box-shadow: 0 6px 16px var(--shadow);
  }

  .profilePage__save-button:disabled {
    background: #ccc;
    cursor: not-allowed;
    box-shadow: none;
  }

  .profilePage__save-button.loading {
    cursor: progress;
  }

  .profilePage__save-button .spinner {
    border: 3px solid rgba(255, 255, 255, 0.5);
    border-top: 3px solid white;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Custom Alert */
  .custom-alert {
    position: fixed;
    top: 20px;
    right: 20px;
    background: var(--primary);
    color: white;
    padding: 16px 24px;
    border-radius: 8px;
    box-shadow: 0 4px 12px var(--shadow);
    font-size: 1rem;
    z-index: 999;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease, transform 0.4s ease;
    transform: translateY(-20px);
  }

  .custom-alert.show {
    opacity: 1;
    pointer-events: auto;
    transform: translateY(0);
  }

  @media (max-width: 600px) {
    .profilePage__form {
      padding: 30px 20px;
    }

    .profilePage__save-button {
      padding: 14px 18px;
      font-size: 1.1rem;
    }
  }
</style>

<main>
  <div class="profilePage__container">

    <div class="profilePage__header">
      <img src="/images/avatar.jpg" alt="User Avatar" />
      <h2>John Doe</h2>
      <p>john.doe@example.com</p>
    </div>

    <form class="profilePage__form" onsubmit="handleFormSubmit(event)">
      <div class="profilePage__form-group">
        <label for="fullName">Full Name</label>
        <input type="text" id="fullName" name="fullName" value="John Doe" />
      </div>

      <div class="profilePage__form-group">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" value="john.doe@example.com" disabled />
      </div>

      <div class="profilePage__form-group">
        <label for="phone">Phone Number</label>
        <input type="tel" id="phone" name="phone" value="+91 98765 43210" />
      </div>

      <div class="profilePage__form-group">
        <label for="address">Address</label>
        <input type="text" id="address" name="address" value="123 Main Street, City, Country" />
      </div>

      <button type="submit" class="profilePage__save-button">
        <i class="fas fa-check-circle"></i>
        <span class="button-text">Save Changes</span>
        <div class="spinner" style="display: none;"></div>
      </button>
    </form>

  </div>

  <!-- Custom Alert Message -->
  <div class="custom-alert" id="customAlert">Profile updated successfully!</div>

</main>

<script>
  function handleFormSubmit(event) {
    event.preventDefault();
    const button = event.target.querySelector('.profilePage__save-button');
    const spinner = button.querySelector('.spinner');
    const text = button.querySelector('.button-text');
    const alertBox = document.getElementById('customAlert');

    button.classList.add('loading');
    spinner.style.display = 'inline-block';
    text.style.display = 'none';
    button.disabled = true;

    // Simulate form submission
    setTimeout(() => {
      spinner.style.display = 'none';
      text.style.display = 'inline';
      button.classList.remove('loading');
      button.disabled = false;

      // Show custom alert
      alertBox.classList.add('show');

      // Hide after 3s
      setTimeout(() => {
        alertBox.classList.remove('show');
      }, 3000);

    }, 2000);
  }
</script>

<%- include('../partials/footer') %>
