<style>
  :root {
    --primary: #C5A880;
    --secondary: #7B5E40;
    --accent: #E0D4B7;
    --light: #F8F5F0;
    --dark: #2C1F1A;
    --bg: #FFF9F3;

    --hover-primary: #D1B37F;
    --hover-accent: #A37B52;
    --border: #BFA67D;
    --shadow: rgba(197, 168, 128, 0.2);
    --gradient-start: #C5A880;
    --gradient-end: #7B5E40;
  }

  body {
    background: var(--bg);
    font-family: "Segoe UI", sans-serif;
    color: var(--dark);
    overflow-x: hidden;
  }

  /* Layout */
  .profilePage__layout {
    display: flex;
    max-width: 1200px;
    margin: 40px auto;
    gap: 20px;
    opacity: 0;
    animation: fadeReveal 1.2s ease forwards;
  }

  /* Sidebar */
  .profilePage__sidebar {
    width: 280px;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 8px 18px var(--shadow);
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 24px;

    /* Animation */
    transform: translateX(-50px) scale(0.95);
    opacity: 0;
    animation: slideGlowLeft 1s ease forwards;
    animation-delay: 0.2s;
  }

  .profilePage__sidebar-user {
    display: flex;
    align-items: center;
    gap: 14px;
    border-bottom: 1px solid #eee;
    padding-bottom: 16px;
  }

  .profilePage__sidebar-user img {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: var(--accent);
    object-fit: cover;
    box-shadow: 0 4px 10px var(--shadow);
    animation: pulseGlow 2.5s infinite ease-in-out;
  }

  .profilePage__sidebar-user h4 {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--dark);
  }

  .profilePage__sidebar-section h5 {
    font-size: 0.95rem;
    color: var(--secondary);
    margin-bottom: 10px;
  }

  .profilePage__links {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .profilePage__links a {
    text-decoration: none;
    color: var(--dark);
    font-size: 0.95rem;
    padding: 8px 12px;
    border-radius: 6px;
    display: flex;
    align-items: center;
    gap: 10px;
    transition: background 0.3s ease, color 0.3s ease, transform 0.2s ease;
  }

  .profilePage__links a:hover,
  .profilePage__links a.active {
    background: var(--primary);
    color: #fff;
    transform: translateX(5px);
  }

  /* Main Content */
  .profilePage__content {
    flex: 1;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 8px 18px var(--shadow);
    padding: 30px;

    /* Animation */
    transform: translateY(40px) scale(0.98);
    opacity: 0;
    animation: slideGlowUp 1.2s ease forwards;
    animation-delay: 0.4s;
  }

  .profilePage__content h2 {
    margin-bottom: 15px;
    color: var(--secondary);
  }

  /* Form */
  .profilePage__form label,
  .profilePage__form input,
  .profilePage__form textarea,
  .profilePage__save-button {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeStaggerUp 0.8s ease forwards;
  }

  .profilePage__form label:nth-of-type(1),
  .profilePage__form input:nth-of-type(1) { animation-delay: 0.6s; }
  .profilePage__form label:nth-of-type(2),
  .profilePage__form input:nth-of-type(2) { animation-delay: 0.8s; }
  .profilePage__form label:nth-of-type(3),
  .profilePage__form input:nth-of-type(3) { animation-delay: 1s; }
  .profilePage__form label:nth-of-type(4),
  .profilePage__form textarea { animation-delay: 1.2s; }
  .profilePage__save-button { animation-delay: 1.4s; }

  .profilePage__form input,
  .profilePage__form textarea {
    width: 100%;
    padding: 12px 14px;
    border: 1px solid var(--border);
    border-radius: 8px;
    font-size: 0.95rem;
    margin-bottom: 18px;
    outline: none;
    transition: border 0.2s, background 0.2s, box-shadow 0.2s;
    background: var(--light);
  }

  .profilePage__form input:focus,
  .profilePage__form textarea:focus {
    border-color: var(--primary);
    background: #fff;
    box-shadow: 0 0 8px var(--shadow);
  }

  .profilePage__form textarea {
    resize: vertical;
    min-height: 90px;
  }

  .profilePage__save-button {
    background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
    color: #fff;
    border: none;
    padding: 14px 22px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 500;
    transition: transform 0.3s ease, opacity 0.2s ease, box-shadow 0.3s ease;
    box-shadow: 0 6px 14px var(--shadow);
  }

  .profilePage__save-button:hover {
    opacity: 0.95;
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 10px 20px var(--shadow);
  }

  @media(max-width: 768px) {
    .profilePage__layout {
      flex-direction: column;
    }
    .profilePage__sidebar {
      width: 100%;
    }
  }

  /* Animations */
  @keyframes fadeReveal {
    to { opacity: 1; }
  }

  @keyframes slideGlowLeft {
    to { opacity: 1; transform: translateX(0) scale(1); }
  }

  @keyframes slideGlowUp {
    to { opacity: 1; transform: translateY(0) scale(1); }
  }

  @keyframes fadeStaggerUp {
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes pulseGlow {
    0%, 100% { box-shadow: 0 0 8px var(--accent); }
    50% { box-shadow: 0 0 18px var(--primary); }
  }
</style>

