  <%- include('../partials/header') %>
  <style>



    /* Main Content */
    .wishlist-container {
      max-width: 1200px;
      margin: 40px auto;
      background-color: var(--light);
      border-radius: 16px;
      box-shadow: 0 8px 24px var(--shadow);
      padding: 40px;
      animation: fadeIn 0.5s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .wishlist-container h2 {
      color: var(--dark);
      font-size: 2.2rem;
      font-weight: 600;
      text-align: center;
      margin-bottom: 30px;
      padding-bottom: 15px;
      border-bottom: 3px solid var(--border);
      letter-spacing: 0.5px;
    }

    .wishlist-grid {
      display: grid;
      gap: 24px;
    }

    .wishlist-card {
      display: flex;
      align-items: center;
      background: var(--light);
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 4px 16px var(--shadow);
      transition: var(--transition);
      position: relative;
      overflow: hidden;
    }

    .wishlist-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 8px 24px var(--shadow);
    }

    .wishlist-image {
      width: 160px;
      height: auto;
      border-radius: 10px;
      margin-right: 24px;
      object-fit: cover;
      transition: var(--transition);
    }

    .wishlist-image:hover {
      transform: scale(1.05);
    }

    .wishlist-content {
      flex: 1;
    }

    .wishlist-content h3 {
      color: var(--dark);
      font-size: 1.4rem;
      font-weight: 500;
      margin-bottom: 8px;
      line-height: 1.4;
    }

    .assured-badge {
      display: inline-flex;
      align-items: center;
      background: var(--accent);
      color: var(--dark);
      font-weight: 600;
      padding: 6px 12px;
      border-radius: 6px;
      font-size: 0.9rem;
      margin-bottom: 12px;
    }

    .price {
      font-size: 1.3rem;
      font-weight: 600;
      color: var(--primary);
      margin-bottom: 8px;
    }

    .price del {
      color: var(--secondary);
      font-weight: 400;
      margin-left: 12px;
      font-size: 0.95rem;
    }

    .discount {
      color: #2E7D32;
      font-weight: 500;
      margin-left: 12px;
      font-size: 0.95rem;
    }

    .unavailable {
      color: var(--secondary);
      font-style: italic;
      font-size: 0.9rem;
      margin-top: 8px;
    }

    .action-buttons {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .add-to-cart, .delete-button {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 12px 20px;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: var(--transition);
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .add-to-cart {
      background: var(--primary);
      color: var(--light);
    }

    .add-to-cart:hover {
      background: var(--hover-primary);
      transform: translateY(-2px);
    }

    .add-to-cart:disabled {
      background: #ccc;
      cursor: not-allowed;
    }

    .delete-button {
      background: var(--secondary);
      color: var(--light);
    }

    .delete-button:hover {
      background: var(--hover-accent);
      transform: translateY(-2px);
    }

    .loading::after {
      content: '';
      display: inline-block;
      width: 16px;
      height: 16px;
      border: 2px solid var(--light);
      border-radius: 50%;
      border-top-color: transparent;
      animation: spin 0.8s linear infinite;
      margin-left: 8px;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .wishlist-container {
        padding: 20px;
        margin: 20px;
      }

      .wishlist-card {
        flex-direction: column;
        align-items: flex-start;
        gap: 16px;
      }

      .wishlist-image {
        width: 100%;
        max-width: 200px;
        margin: 0 auto;
      }

      .action-buttons {
        width: 100%;
        flex-direction: row;
        justify-content: space-between;
      }

      .add-to-cart, .delete-button {
        flex: 1;
        text-align: center;
      }
    }

    @media (max-width: 480px) {
      .wishlist-container h2 {
        font-size: 1.8rem;
      }

      .wishlist-content h3 {
        font-size: 1.2rem;
      }

      .price {
        font-size: 1.1rem;
      }
    }
  </style>



  <!-- Main Content -->
  <main>
    <div class="wishlist-container">
      <h2>My Wishlist (4)</h2>
      <div class="wishlist-grid">
        <div class="wishlist-card" role="region" aria-label="Wishlist item: HRX Running Shoes">
