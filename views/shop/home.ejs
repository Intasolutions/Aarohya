<%- include('../partials/header') %>



<section class="product-page">
  <!-- Left Column: Images -->
  <div class="product-gallery">
    <div class="main-image">
      <img id="mainProductImage" src="/img/product-img/pro-big-1.jpg" alt="Product Image">
    </div>
    <div class="thumbnail-row">
      <img src="/img/product-img/pro-big-1.jpg" onclick="changeImage(this)" class="active">
      <img src="/img/product-img/pro-big-2.jpg" onclick="changeImage(this)">
      <img src="/img/product-img/pro-big-3.jpg" onclick="changeImage(this)">
      <img src="/img/product-img/pro-big-4.jpg" onclick="changeImage(this)">
    </div>
  </div>

  <!-- Right Column: Details -->
  <div class="product-details">
    <p class="breadcrumb">HOME > FURNITURE > CHAIRS > <span>WHITE MODERN CHAIR</span></p>

    <h2 class="price">$180</h2>
    <h1 class="title">White Modern Chair</h1>

    <div class="rating">
      <span>★★★★★</span>
      <a href="#">Write A Review</a>
    </div>

    <p class="stock">✔ In Stock</p>

    <p class="description">
      Lorem ipsum dolor sit amet, consectetur adipisicing elit.
      Aliquid quae eveniet culpa officia quidem mollitia impedit
      iste asperiores nisi reprehenderit consequatur.
    </p>

    <!-- Color Options -->
    <div class="color-options">
      <p>Choose Color:</p>
      <div class="colors">
        <span class="color-circle" style="background:#000;" onclick="selectColor(this)"></span>
        <span class="color-circle" style="background:#f5a623;" onclick="selectColor(this)"></span>
        <span class="color-circle" style="background:#fff; border:1px solid #ccc;" onclick="selectColor(this)"></span>
      </div>
    </div>

    <!-- Quantity -->
    <div class="quantity">
      <label for="qty">Qty:</label>
      <input type="number" id="qty" value="1" min="1">
    </div>

    <!-- Add to Cart -->
    <button class="add-to-cart">Add to Cart</button>
  </div>
</section>

<script src="public/js/product.js"></script>

<%- include('../partials/footer') %>
