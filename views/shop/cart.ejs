<%- include('../partials/header') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">



<div class="cart-container">

  <div class="cart-items">
    <h2>Your Shopping Cart</h2>

    <div class="cart-item">
      <img src="/public/images/hero/her-1.png" alt="Gold Necklace" />
      <div class="item-details">
        <div class="item-name">Luxury Gold Necklace</div>
        <div class="item-subtext">24K Pure Gold, Handcrafted Design</div>
        <div class="stock-status">Out Of Stock</div>
        <div class="item-actions">
          <button><i class="fas fa-heart"></i> Save for Later</button>
          <button><i class="fas fa-trash-alt"></i> Remove</button>
        </div>
      </div>
    </div>

    <div class="cart-item">
      <img src="/public/images/hero/her-1.png" alt="Silver Bracelet" />
      <div class="item-details">
        <div class="item-name">Elegant Silver Bracelet</div>
        <div class="item-subtext">Sterling Silver, Stylish Fit</div>
        <div class="stock-status">Enter pincode to check stock</div>
        <div class="item-actions">
          <button><i class="fas fa-heart"></i> Save for Later</button>
          <button><i class="fas fa-trash-alt"></i> Remove</button>
        </div>
      </div>
    </div>

    <div class="cart-item">
      <img src="/public/images/hero/her-1.png" alt="LED Light" />
      <div class="item-details">
        <div class="item-name">LED Retro Style Camping Light</div>
        <div class="item-subtext">Battery Operated, Vintage Look</div>
        <div class="stock-status">Out Of Stock</div>
        <div class="item-actions">
          <button><i class="fas fa-heart"></i> Save for Later</button>
          <button><i class="fas fa-trash-alt"></i> Remove</button>
        </div>
      </div>
    </div>

  </div>

  <div class="cart-summary">
    <h3>PRICE DETAILS</h3>

    <div class="price-row">
      <span>Price (3 items)</span>
      <span>₹7,836</span>
    </div>
    <div class="price-row">
      <span>Discount</span>
      <span>- ₹7,413</span>
    </div>
    <div class="price-row">
      <span>Coupons Applied</span>
      <span>- ₹307</span>
    </div>
    <div class="price-row">
      <span>Protect Promise Fee</span>
      <span>₹49</span>
    </div>

    <div class="total-price">
      ₹10,165
    </div>

    <div class="save-amount">
      You will save ₹7,671 on this order
    </div>

    <button class="place-order-btn"><i class="fas fa-check-circle"></i> PLACE ORDER</button>
  </div>

</div>

