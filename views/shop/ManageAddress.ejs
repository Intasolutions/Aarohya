<%- include('../partials/header') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
  /* Layout */
  .addressPage__layout {
    display: flex;
    max-width: 1200px;
    margin: 40px auto;
    gap: 20px;
  }

  /* Sidebar - same as profile */
  .addressPage__sidebar {
    width: 280px;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 8px 18px var(--shadow);
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  /* Content */
  .addressPage__content {
    flex: 1;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 8px 18px var(--shadow);
    padding: 30px;
  }

  .addressPage__content h2 {
    margin-bottom: 20px;
    color: var(--secondary);
  }

  /* Address Cards */
  .addressCard {
    background: var(--light);
    border-radius: 12px;
    box-shadow: 0 4px 10px var(--shadow);
    padding: 20px;
    margin-bottom: 20px;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
    position: relative;
  }

  .addressCard:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px var(--shadow);
  }

  .addressCard__badge {
    position: absolute;
    top: -12px;
    right: 15px;
    background: var(--primary);
    color: #fff;
    font-size: 0.75rem;
    padding: 4px 10px;
    border-radius: 20px;
    box-shadow: 0 4px 10px var(--shadow);
  }

  .addressCard h4 {
    margin: 0 0 8px;
    font-size: 1rem;
    color: var(--dark);
  }

  .addressCard p {
    margin: 3px 0;
    font-size: 0.9rem;
    color: var(--secondary);
  }

  .addressCard-actions {
    margin-top: 15px;
    display: flex;
    gap: 15px;
  }

  .addressCard-actions button {
    background: transparent;
    border: none;
    color: var(--primary);
    cursor: pointer;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 6px;
    transition: color 0.3s ease;
  }

  .addressCard-actions button:hover {
    color: var(--hover-accent);
  }

  /* Add Address Button */
  .addressPage__add-btn {
    display: inline-flex;
    align-items: center;
    background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
    color: #fff;
    border: none;
    padding: 12px 20px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 0.95rem;
    font-weight: 500;
    transition: transform 0.3s ease, opacity 0.2s ease;
    box-shadow: 0 6px 14px var(--shadow);
    margin-top: 20px;
  }

  .addressPage__add-btn:hover {
    opacity: 0.95;
    transform: translateY(-3px) scale(1.02);
  }

  /* Add Address Form */
  .addAddress__form {
    margin-top: 25px;
    padding: 20px;
    background: var(--light);
    border-radius: 12px;
    border: 1px solid var(--border);
    display: none;
  }

  .addAddress__form label {
    display: block;
    margin-bottom: 6px;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--dark);
  }

  .addAddress__form input,
  .addAddress__form textarea {
    width: 100%;
    padding: 12px 14px;
    border: 1px solid var(--border);
    border-radius: 8px;
    font-size: 0.9rem;
    margin-bottom: 16px;
    outline: none;
    background: #fff;
  }

  .addAddress__form input:focus,
  .addAddress__form textarea:focus {
    border-color: var(--primary);
    box-shadow: 0 0 6px var(--shadow);
  }

  /* Radio Buttons */
  .deliveryType {
    margin-bottom: 16px;
  }

  .deliveryType legend {
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 8px;
    color: var(--dark);
  }

  .deliveryType label {
    display: inline-flex;
    align-items: center;
    margin-right: 20px;
    cursor: pointer;
    font-size: 0.9rem;
    color: var(--secondary);
    position: relative;
    padding-left: 26px;
  }

  .deliveryType input {
    position: absolute;
    opacity: 0;
    cursor: pointer;
  }

  .deliveryType span {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    height: 16px;
    width: 16px;
    background-color: #fff;
    border: 2px solid var(--border);
    border-radius: 50%;
  }

  .deliveryType input:checked ~ span {
    background-color: var(--primary);
    border-color: var(--primary);
  }

  .deliveryType span:after {
    content: "";
    position: absolute;
    display: none;
  }

  .deliveryType input:checked ~ span:after {
    display: block;
  }

  .deliveryType span:after {
    top: 3px;
    left: 3px;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: white;
  }

  .addAddress__form button {
    background: var(--primary);
    color: #fff;
    border: none;
    padding: 12px 18px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 0.9rem;
    transition: background 0.3s ease;
  }

  .addAddress__form button:hover {
    background: var(--hover-primary);
  }

  @media(max-width: 768px) {
    .addressPage__layout {
      flex-direction: column;
    }
    .addressPage__sidebar {
      width: 100%;
    }
  }
</style>

<main>
  <div class="addressPage__layout">

    <!-- Sidebar -->
    <aside class="addressPage__sidebar">
      <div class="profilePage__sidebar-user">
        <img src="public/images/profile/avatar.jpg" alt="User Avatar">
        <div>
          <p>Hello,</p>
          <h4>Akash A</h4>
        </div>
      </div>

      <div class="profilePage__sidebar-section">
        <h5><i class="fas fa-user-cog"></i> Account Settings</h5>
        <div class="profilePage__links">
          <a href="/profile">Profile Information</a>
          <a href="/manage-address" class="active">Manage Addresses</a>
          <a href="#">PAN Card Information</a>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <section class="addressPage__content">
      <h2>Manage Addresses</h2>
      <hr><br>

      <!-- Address Cards -->
      <div class="addressCard">
        <span class="addressCard__badge">Home</span>
        <h4>Akash A</h4>
        <p>123, Sample Street, Kochi, Kerala</p>
        <p>Phone: +91 81296 86484</p>
        <div class="addressCard-actions">
          <button><i class="fas fa-edit"></i> Edit</button>
          <button><i class="fas fa-trash"></i> Delete</button>
        </div>
      </div>

      <div class="addressCard">
        <span class="addressCard__badge">Work</span>
        <h4>Akash A</h4>
        <p>456, Business Park, Bangalore</p>
        <p>Phone: +91 98765 43210</p>
        <div class="addressCard-actions">
          <button><i class="fas fa-edit"></i> Edit</button>
          <button><i class="fas fa-trash"></i> Delete</button>
        </div>
      </div>

      <!-- Add New Address -->
      <button class="addressPage__add-btn">
        <i class="fas fa-plus"></i> Add New Address
      </button>

      <form class="addAddress__form">
        <label>Full Name</label>
        <input type="text" placeholder="Enter your name">

        <label>Phone</label>
        <input type="tel" placeholder="Enter phone number">

        <label>Address</label>
        <textarea placeholder="Enter full address"></textarea>

        <!-- Delivery Type Radio -->
        <fieldset class="deliveryType">
          <legend>Delivery Type</legend>
          <label>
            <input type="radio" name="deliveryType" value="Home" checked>
            <span></span> Home
          </label>
          <label>
            <input type="radio" name="deliveryType" value="Work">
            <span></span> Work
          </label>
          <label>
            <input type="radio" name="deliveryType" value="Other">
            <span></span> Other
          </label>
        </fieldset>

        <button type="submit"><i class="fas fa-save"></i> Save Address</button>
      </form>
    </section>

  </div>
</main>

<script>
  // Toggle Add Address form
  document.querySelector(".addressPage__add-btn").addEventListener("click", () => {
    const form = document.querySelector(".addAddress__form");
    form.style.display = form.style.display === "none" || form.style.display === "" ? "block" : "none";
  });
</script>

