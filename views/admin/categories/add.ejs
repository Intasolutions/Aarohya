<%- include('../../partials/admin_head', { pageTitle: 'Add Category' }) %>

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh; background: var(--light);">
  <div class="card shadow-lg p-4 rounded-4 border-0" style="max-width: 600px; width: 100%; background: #fff;">
    
    <!-- Header -->
    <div class="text-center mb-4">
      <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3"
           style="width: 60px; height: 60px; background: var(--primary); color: var(--dark);">
        <i class="bi bi-folder-plus fs-3"></i>
      </div>
      <h3 class="fw-bold" style="color: var(--dark);">Add Category</h3>
      <p class="text-muted mb-0">Fill out the details below to create a new category.</p>
    </div>

    <!-- Form -->
    <form action="/admin/categories/add" method="POST">

      <!-- Category Name -->
      <div class="mb-3">
        <label for="name" class="form-label fw-semibold" style="color: var(--dark);">
          <i class="bi bi-tag-fill me-2 text-accent"></i> Category Name
        </label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          class="form-control rounded-3 border-1 shadow-sm" 
          placeholder="Enter category name" 
          required
        />
      </div>

      <!-- Slug -->
      <div class="mb-3">
        <label for="slug" class="form-label fw-semibold" style="color: var(--dark);">
          <i class="bi bi-link-45deg me-2 text-accent"></i> Slug (optional)
        </label>
        <input 
          type="text" 
          id="slug" 
          name="slug" 
          class="form-control rounded-3 border-1 shadow-sm" 
          placeholder="Leave empty to auto-generate"
        />
      </div>

<div class="form-check mb-4">
  <input 
    type="checkbox" 
    id="isPrivate" 
    name="isPrivate" 
    class="form-check-input"
  />
  <label for="isPrivate" class="form-check-label">
    <i class="bi bi-shield-lock-fill me-2" style="color: var(--accent);"></i>
    Private?
  </label>
</div>




      <!-- Action Buttons -->
      <div class="d-flex gap-2">
        <button type="submit" class="btn w-100 py-2 fw-semibold rounded-3"
                style="background: var(--accent); color: #fff; border: none;">
          <i class="bi bi-save-fill me-2"></i> Save
        </button>
        <a href="/admin/categories" 
           class="btn w-100 py-2 fw-semibold rounded-3"
           style="background: var(--secondary); color: #fff; border: none;">
          <i class="bi bi-arrow-left-circle me-2"></i> Cancel
        </a>
      </div>
    </form>
  </div>
</div>

<%- include('../../partials/admin_footer') %>
