<%- include('../../partials/admin_head', { pageTitle: 'All Categories' }) %>

<div class="card shadow-lg p-4 rounded-4 border-0" style="background: #fff;">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-dark m-0">All Categories</h2>
    <!-- <a href="/admin/categories/add" class="btn btn-accent px-4 rounded-pill">
      <i class="bi bi-plus-lg me-1"></i> Add Category
    </a> -->
  </div>

  <div class="table-responsive">
    <table class="table align-middle">
      <thead class="table-light border-bottom">
        <tr class="text-uppercase small fw-bold text-secondary">
          <th>#</th>
          <th>Name</th>
          <th>Slug</th>
          <th>Private</th>
          <th>Blocked</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach((c, index) => { %>
          <tr class="table-row-hover">
            <td class="fw-semibold text-muted"><%= index + 1 %></td>
            <td class="fw-semibold text-dark"><%= c.name %></td>
            <td><span class="badge rounded-pill bg-light text-dark"><%= c.slug %></span></td>
            <td>
              <% if (c.isPrivate) { %>
                <span class="badge rounded-pill bg-accent-subtle text-accent">Yes</span>
              <% } else { %>
                <span class="badge rounded-pill bg-light text-dark">No</span>
              <% } %>
            </td>
            <td>
              <% if (c.isBlocked) { %>
                <span class="badge bg-danger">Blocked</span>
              <% } else { %>
                <span class="badge bg-success">Active</span>
              <% } %>
            </td>
            <td class="text-center">
              <a href="/admin/categories/edit/<%= c._id %>" class="btn btn-sm btn-outline-accent rounded-pill px-3 me-1">
                <i class="bi bi-pencil-square"></i>
              </a>
              <form action="/admin/categories/delete/<%= c._id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3"
                  onclick="return confirm('Are you sure?')">
                  <i class="bi bi-trash"></i>
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../../partials/admin_footer') %>