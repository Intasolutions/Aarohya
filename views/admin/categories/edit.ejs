<%- include('../../partials/admin_head', { pageTitle: 'Edit Category' }) %>

<div class="card shadow-lg p-4 rounded-3 mx-auto" style="max-width: 600px;">
  <h2 class="mb-4 text-center">Edit Category</h2>

  <form action="/admin/categories/edit/<%= category._id %>" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">Category Name</label>
      <input 
        type="text" 
        id="name" 
        name="name" 
        class="form-control" 
        value="<%= category.name %>" 
        required
      />
    </div>

    <div class="mb-3">
      <label for="slug" class="form-label">Slug</label>
      <input 
        type="text" 
        id="slug" 
        name="slug" 
        class="form-control" 
        value="<%= category.slug %>" 
      />
    </div>

    <div class="form-check mb-3">
      <input 
        class="form-check-input" 
        type="checkbox" 
        id="isPrivate" 
        name="isPrivate" 
        <%= category.isPrivate ? "checked" : "" %>
      />
      <label class="form-check-label" for="isPrivate">
        Private?
      </label>
    </div>

    <button type="submit" class="btn btn-primary w-100">Update</button>
  </form>
</div>

<%- include('../../partials/admin_footer') %>
