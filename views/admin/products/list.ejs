<%- include('../../partials/admin_head', { pageTitle: 'All Products' }) %>

<div class="card shadow-lg p-4 rounded-4 border-0" style="background: #fff;">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-dark m-0">All Products</h2>
    <!-- <a href="/admin/products/add" class="btn btn-accent px-4 rounded-pill">
      <i class="bi bi-plus-lg me-1"></i> Add Product
    </a> -->
  </div>

  <div class="table-responsive">
    <table class="table align-middle">
      <thead class="table-light border-bottom">
        <tr class="text-uppercase small fw-bold text-secondary">
          <th>#</th>
          <th>Product</th>
          <th>Category</th>
          <th>Subcategory</th>
          <th>Price</th>
          <th>Stock</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach((p, index) => { %>
          <tr class="table-row-hover">
            <td class="fw-semibold text-muted"><%= index + 1 %></td>
            <td class="fw-semibold text-dark"><%= p.productName %></td>
            <td><span class="badge rounded-pill bg-accent-subtle text-accent"><%= p.category?.name || '-' %></span></td>
            <td><span class="badge rounded-pill bg-light text-dark"><%= p.subcategory?.name || '-' %></span></td>
            <td class="fw-bold text-dark">â‚¹<%= p.salePrice || p.regularPrice %></td>
            <td>
              <% if (p.quantity > 10) { %>
                <span class="badge bg-success">In Stock (<%= p.quantity %>)</span>
              <% } else if (p.quantity > 0) { %>
                <span class="badge bg-warning text-dark">Low (<%= p.quantity %>)</span>
              <% } else { %>
                <span class="badge bg-danger">Out of Stock</span>
              <% } %>
            </td>
            <td class="text-center">
              <a href="/admin/products/edit/<%= p._id %>" class="btn btn-sm btn-outline-accent rounded-pill px-3 me-1">
                <i class="bi bi-pencil-square"></i>
              </a>
              <form action="/admin/products/delete/<%= p._id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3"
                  onclick="return confirm('Are you sure?')">
                  <i class="bi bi-trash"></i>
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../../partials/admin_footer') %>
